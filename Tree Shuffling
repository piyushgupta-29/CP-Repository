#include<bits/stdc++.h>
using namespace std;
 
#define boost ios_base::sync_with_stdio(false);cin.tie(NULL)
#define endl "\n"
#define ll long long int
#define mod 1000000007
#define vll vector<ll>
#define vvll vector<vll>
#define pb push_back
#define mll map<ll,ll>
#define pll pair<ll,ll>
 
ll a[200005],b[200005],c[200005];
ll n;
vvll g(200005);

ll dfs(ll ch,ll p,ll x,ll zero,ll one)
{
	a[ch]=min(a[ch],x);
	ll sum=0;
	for(auto it:g[ch])
	{
		if(it!=p)
		{
			sum+=dfs(it,ch,a[ch],zero,one);
		}
	}
	if(b[ch]!=c[ch])
	{
		if(b[ch])
			one++;
		else 
			zero++;
	}
	ll k;
	if(one<zero)
	{
		k=one;
		zero-=one;
		one=0;
	}
	else 
	{
		k=zero;
		one-=zero;
		zero=0;
	}
	return sum+k*a[ch];
}
int main()
{
	boost;
	ll t,i,x,y,m,p,q,sum,ans,cnt,mx,mn,j,k;
	// cin>>t;
	// while(t--)
	// {
		sum=0;cnt=0;ans=0;mx=INT_MIN;mn=1e18;
		cin>>n;
		for(i=1;i<=n;i++)
		{
			cin>>a[i]>>b[i]>>c[i];
			if(b[i])
				sum++;
			if(c[i])
				cnt++;
		}
		for(i=0;i<n-1;i++)
		{
			ll u,v;
			cin>>u>>v;
			g[u].pb(v);
			g[v].pb(u);
		}
		if(sum!=cnt)
		{
			cout<<-1<<endl;
			return 0;
		}
		cout<<dfs(1,-1,a[1],0,0)<<endl;
	// }
}
