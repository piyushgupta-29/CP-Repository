#include<bits/stdc++.h>
using namespace std;
 
#define boost ios_base::sync_with_stdio(false);cin.tie(NULL)
#define endl "\n"
#define ll long long int
#define mod 1000000007
#define vll vector<ll>
#define vvll vector<vll>
#define pb push_back
#define mll map<ll,ll>
#define pll pair<ll,ll>
#define N 500005

vector<vector<pll>> a(N);
vll vis(N),col(N);
ll flag,sum,cnt;

void dfs(ll c,ll p)
{
    vis[c]=1;
    for(auto it:a[c])
    {
        if(it.second==1&&col[it.first]==col[c]) { flag=1; return ; }
        else if(it.second==2&&col[it.first]==3-col[c]) { flag=1; return ; }
        if(vis[it.first]) continue;
        if(it.second==1) { col[it.first]=3-col[c]; if(col[it.first]==2) cnt++; else sum++; }
        else { col[it.first]=col[c]; if(col[it.first]==2) cnt++; else sum++;}
        dfs(it.first,c);
    }
}
int main()
{
    boost;
    ll t,n,i,x,y,j,k,m,p,mn,mx,ans;
    cin>>t;
    while(t--)
    {
        sum=0;cnt=0;ans=0;mn=1e18;mx=INT_MIN;flag=0;
        cin>>n>>m;
        for(i=1;i<=n;i++) a[i].clear(),vis[i]=0,col[i]=0;
        for(i=0;i<m;i++)
        {
            ll u,v,w;
            cin>>w>>u>>v;
            a[u].pb({v,w});a[v].pb({u,w});
        }
        for(i=1;i<=n;i++)
        {
            if(vis[i]) continue;
            // cout<<i<<endl;
            sum=1;cnt=0;col[i]=1;
            dfs(i,-1);
            if(flag) break; 
            ans+=max(cnt,sum);
        }
        // for(i=1;i<=n;i++) cout<<col[i]<<' ';cout<<endl;
        if(flag) cout<<-1<<endl; 
        else cout<<n-ans<<endl;
    }
}
